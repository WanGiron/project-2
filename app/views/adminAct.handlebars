<h1>Daily Activities</h1>

<div id="title-here">

    <h2 id="add-child-name2" value="{{data2}}">{{data2}}</h2>
    <ul>
        {{#each data}}
        <li>
            <h4>{{this.activity_option}}</h4>
        </li>
        <li>{{activity_type}}</li> <span>{{activity_time}}</span>
        {{/each}}
    </ul>

</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <h3 id="add-child-name2" value="{{data2}}" hidden="true">{{data2}}</h3>
                    <h4>Add acitivity</h4>
                    <div class="">
                        <select id="admin-activity-option" type="text" placeholder="Type activity">
                            <option aria-placeholder="Select">Select one</option>
                            <option value="Meals">Meals</option>
                            <option value="Snack">Snack</option>
                            <option value="Play time">Play time</option>
                            <option value="Learnig">Learning</option>
                            <option value="Nap time">Nap time</option>
                            <option value="Daiper">Daiper</option>
                        </select>
                    </div>
                    <input id="add-activity" type="text" placeholder="Type activity">
                    <button id="get-activity">Add activity</button>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
